# Gitlab SSH Creds
host gitlab.com
  User git
  Hostname gitlab.com
host gitlab
  User git
  Hostname gitlab.com
# GitHub SSH Creds
host github.com
  User git
  Hostname github.com
host github
  User git
  Hostname github.com

Host *
  AddKeysToAgent yes
  IdentityFile ~/.ssh/id_ecdsa_sk
  IdentityFile ~/.ssh/id_ecdsa
  IdentityFile ~/.ssh/id_ed25519
  IdentityFile ~/.ssh/id_rsa
{{- if (eq .chezmoi.os "darwin") }}
  IgnoreUnknown UseKeychain
  UseKeychain yes
{{- end }}
{{- if (eq .personal "false") }}
  ControlMaster auto
  ControlPath ~/.ssh/control-%h-%p-%r
  ControlPersist 600
  PKCS11Provider /usr/lib64/libykcs11.so
{{- end }}

Host 192.168.*.*
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
Host 172.16.*.*
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
Host 10.*.*.*
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
