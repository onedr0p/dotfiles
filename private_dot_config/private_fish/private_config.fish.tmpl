set -gx KUBE_EDITOR nano
set -gx VISUAL nano
set -gx EDITOR nano
set -gx HOMEBREW_NO_ANALYTICS 1
set -gx HOMEBREW_NO_AUTO_UPDATE 1
set -gx GOPATH {{ .chezmoi.homeDir }}/go
set -gx ANSIBLE_HOST_KEY_CHECKING False
set -gx GPG_TTY (tty)
set -gx SOPS_AGE_KEY_FILE {{ .chezmoi.homeDir }}/.config/sops/age/keys.txt

{{- if eq .osid "linux-android" }}
set -gx AQUA_CONFIG {{ .chezmoi.homeDir }}/.config/aqua/aqua.yaml
set -gx AQUA_GLOBAL_CONFIG {{ .chezmoi.homeDir }}/.config/aqua/aqua.yaml
set -gx AQUA_ROOT_DIR {{ .chezmoi.homeDir }}/.local/share/aqua
fish_add_path $AQUA_ROOT_DIR/bin
{{- end }}

fish_add_path "{{ .chezmoi.homeDir }}/.local/bin"
fish_add_path "{{ .chezmoi.homeDir }}/.cargo/bin"
fish_add_path "{{ .chezmoi.homeDir }}/.krew/bin"
fish_add_path "{{ .chezmoi.homeDir }}/go/bin"

{{- if (eq .chezmoi.os "darwin") }}
fish_add_path "/usr/local/opt/curl/bin"
fish_add_path "/usr/local/opt/gettext/bin"
fish_add_path "/usr/local/opt/libiconv/bin"
fish_add_path "/usr/local/opt/findutils/libexec/gnubin"
fish_add_path "/usr/local/opt/coreutils/libexec/gnubin"
fish_add_path "/usr/local/opt/grep/libexec/gnubin"
fish_add_path "/usr/local/sbin"
{{- end }}

{{- if or (eq .osid "linux-fedora" .osid "linux-ubuntu") }}
if status --is-interactive
    eval (/home/linuxbrew/.linuxbrew/bin/brew shellenv)
end
{{- end }}

if type -q direnv
    direnv hook fish | source
end

if type -q thefuck
    thefuck --alias | source
end

if type -q starship
    starship init fish | source
end

if type -q zoxide
    zoxide init fish | source
end
